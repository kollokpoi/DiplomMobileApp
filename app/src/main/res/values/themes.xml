<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DiplomMobileApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BorderedMainButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/bordered_button</item>
        <item name="backgroundTint">@color/teal_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BorderedEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/bordered_text_view</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="ThemeOverlay.DiplomMobileApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.DiplomMobileApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DiplomMobileApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DiplomMobileApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
